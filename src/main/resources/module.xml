<?xml version="1.0" encoding="UTF-8"?>
<module version="2.0">
   <meta>
      <identity>
         <uri>urn:com:bbyopen:mongodb</uri>
         <version>1.0.0</version>
      </identity>
      <info>
         <name>urn.com.bbyopen.mongodb</name>
         <description>Module for inserting and querying MongoDB</description>
         <icon>res:/urn_com_bbyopen_mongodb/pub/icon.png</icon>
      </info>
   </meta>
   <system>
      <dynamic/>
   </system>
   <rootspace name="urn.com.bbyopen.mongodb - Development Space" uri="urn:com:bbyopen:mongodb">
      <fileset>
         <regex>res:/etc/system/SimpleDynamicImportHook.xml</regex>
      </fileset>
      <mapper>
         <config>
            <endpoint>
               <id>urn:com:bbyopen:mongodb:ExampleEndpoint</id>
               <name>Example Service</name>
               <description>Example Groovy service generated by New Module Wizard</description>
               <grammar>res:
                  <group name="service">/urn_com_bbyopen_mongodb/service</group>/
                  <group name="value">
                     <regex type="anything"/>
                  </group>
               </grammar>
               <request>
                  <identifier>active:groovy</identifier>
                  <argument name="operator">res:/resources/endpoints/example.gy</argument>
                  <argument method="as-string" name="value">arg:value</argument>
               </request>
            </endpoint>
         </config>
         <space>
            <fileset>
               <regex>res:/resources/endpoints/.*</regex>
            </fileset>
            <import>
               <uri>urn:org:netkernel:lang:groovy</uri>
            </import>
            <import><!-- import Freemarker module (used by example) -->
               <uri>urn:org:netkernel:lang:freemarker</uri>
            </import>
         </space>
      </mapper>
      <fileset><!--Icon-->
         <regex>res:/urn_com_bbyopen_mongodb/pub/(.*)</regex>
         <rewrite>res:/resources/pub/$1</rewrite>
      </fileset>
   </rootspace>
   <rootspace name="urn.com.bbyopen.mongodb - Documentation Space" public="true" uri="urn:com:bbyopen:mongodb:doc">
      <fileset>
         <regex>res:/etc/system/(Books|Docs).xml</regex>
      </fileset>
      <fileset>
         <regex>res:/resources/doc/.*</regex>
      </fileset>
   </rootspace>
   <rootspace name="urn.com.bbyopen.mongodb - Unit Test Space" public="true" uri="urn:com:bbyopen:mongodb:test">
      <fileset>
         <regex>res:/etc/system/Tests.xml</regex>
      </fileset>
      <fileset>
         <regex>res:/resources/test/.*</regex>
      </fileset>
      <endpoint><!-- stop any configuration from module under test from polluting address space -->
         <prototype>Limiter</prototype>
         <grammar>res:/etc/
            <regex type="anything"/>
         </grammar>
      </endpoint>
      <import><!-- import the main space which we are testing -->
         <uri>urn:com:bbyopen:mongodb</uri>
      </import>
      <import>
         <uri>urn:org:netkernel:ext:layer1</uri>
         <private/>
      </import>
   </rootspace>
</module>